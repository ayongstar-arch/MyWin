{
    "extends": "./tsconfig.json",
    "include": [
        "backend/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "**/*spec.ts",
        "components",
        "src"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "outDir": "./dist"
    }
}